<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_marginTop="250dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/show"
            android:layout_width="260dp"
            android:layout_height="50dp"/>
        <LinearLayout
            android:id="@+id/row1"
            android:layout_below="@id/show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/num1"
                android:tag="1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:onClick="onClickNumber"
                android:text="1"></Button>
            <Button
                android:tag="2"
                android:id="@+id/num2"
                android:onClick="onClickNumber"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="2"></Button>

            <Button
                android:id="@+id/num3"
                android:tag="3"
                android:onClick="onClickNumber"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="3"></Button>
            <Button
                android:layout_marginLeft="10dp"
                android:id="@+id/tool1"
                android:tag="+"
                android:onClick="onClickTool"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="+"></Button>
        </LinearLayout>
        <LinearLayout
            android:layout_below="@id/row1"
            android:id="@+id/row2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:onClick="onClickNumber"
                android:id="@+id/num4"
                android:tag="4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="4"></Button>
            <Button
                android:onClick="onClickNumber"
                android:id="@+id/num5"
                android:tag="5"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="5"></Button>

            <Button
                android:onClick="onClickNumber"
                android:id="@+id/num6"
                android:tag="6"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="6"></Button>
            <Button
                android:layout_marginLeft="10dp"
                android:id="@+id/tool2"
                android:tag="-"
                android:onClick="onClickTool"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="-"></Button>
        </LinearLayout>
        <LinearLayout
            android:layout_below="@id/row2"
            android:id="@+id/row3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:onClick="onClickNumber"
                android:id="@+id/num7"
                android:tag="7"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="7"></Button>
            <Button
                android:onClick="onClickNumber"
                android:id="@+id/num8"
                android:tag="8"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="8"></Button>

            <Button
                android:onClick="onClickNumber"
                android:id="@+id/num9"
                android:tag="9"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="9"></Button>
            <Button
                android:layout_marginLeft="10dp"
                android:id="@+id/tool3"
                android:tag="*"
                android:onClick="onClickTool"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="*"></Button>
        </LinearLayout>
        <LinearLayout
            android:layout_below="@id/row3"
            android:id="@+id/row4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/cancel"
                android:tag="C"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="C"></Button>
            <Button
                android:onClick="onClickNumber"
                android:id="@+id/num0"
                android:tag="0"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="0"></Button>

            <Button
                android:id="@+id/getResult"
                android:tag="="
                android:onClick="onClickResult"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="="></Button>
            <Button
                android:layout_marginLeft="10dp"
                android:id="@+id/tool4"
                android:tag="/"
                android:onClick="onClickTool"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="/"></Button>
        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>